<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="10"
    tools:context="tranlam.viewpagerdemo.Tab2">


<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/fragment_2.margin"
        android:layout_weight="3">
        <EditText
            android:id="@+id/edtPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/fragment_2.paddingtop"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:gravity="center"
            android:hint="Phone No."
            android:textSize="@dimen/fragment_2.text.normal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorAccent"
            android:text="Del"
            android:id="@+id/btndel"
            android:textColor="#fff"
            android:textSize="@dimen/fragment_2.text.normal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large"/></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large"/></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large"/></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="#"
                android:background="@drawable/btnstyle"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.size_large"/></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Clear All"
                android:onClick="buttonClickEvent"
                android:background="@color/colorAccent"
                android:textColor="@color/colorWhite"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.small"
                android:id="@+id/btnClearAll"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Make Call"
                android:onClick="buttonClickEvent"
                android:background="@color/colorGreen"
                android:textColor="@color/colorWhite"
                android:layout_margin="@dimen/fragment_2.btnmargin"
                android:textSize="@dimen/fragment_2.text.small"
                android:id="@+id/btnCall"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>